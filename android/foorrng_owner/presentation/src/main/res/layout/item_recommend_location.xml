<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_recommend_location_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_recommend_location_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/tv_recommend_location_comment"
        app:layout_constraintEnd_toStartOf="@id/btn_recommend_location_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="대구광역시 중구 명륜로23길 80" />

    <TextView
        android:id="@+id/tv_recommend_location_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_recommend_location_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_recommend_location_address"
        tools:text="인근에 치킨을 좋아하는 소비자가 27명 입니다." />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_recommend_location_nav"
        style="@style/Foorrng.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingHorizontal="14dp"
        android:paddingVertical="6dp"
        android:text="@string/location_manage_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/btn_recommend_location_add"
        app:layout_constraintStart_toStartOf="@id/btn_recommend_location_add"
        app:layout_constraintTop_toBottomOf="@id/btn_recommend_location_add" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_recommend_location_add"
        style="@style/Foorrng.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingHorizontal="14dp"
        android:paddingVertical="6dp"
        android:text="@string/location_recommend_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>