<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".truck.info.TruckBasicInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Foorrng.TEXT.B.12"
                android:textSize="12sp"
                android:text="@string/report_warning"
                android:textColor="@color/red"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="@style/Foorrng.TEXT.EB.14"
                android:textColor="@color/foorrng_orange_dark"
                android:text="@string/menu"/>
            
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

            <TextView
                android:id="@+id/btn_more_menu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:text="@string/more_menu"
                android:layout_gravity="right"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="@style/Foorrng.TEXT.EB.14"
                android:textColor="@color/foorrng_orange_dark"
                android:text="@string/car_number"
                android:layout_marginVertical="4dp"/>

            <TextView
                android:id="@+id/tv_car_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Foorrng.TEXT.SB.16"
                tools:text="12가 1234" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="@style/Foorrng.TEXT.EB.14"
                android:textColor="@color/foorrng_orange_dark"
                android:text="@string/food_category"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tv_food_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Foorrng.TEXT.SB.16"
                tools:text="치킨" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="@style/Foorrng.TEXT.EB.14"
                android:textColor="@color/foorrng_orange_dark"
                android:text="@string/call_number"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tv_call_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Foorrng.TEXT.SB.16"
                tools:text="010-1234-1234" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="@style/Foorrng.TEXT.EB.14"
                android:textColor="@color/foorrng_orange_dark"
                android:text="@string/notice"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tv_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Foorrng.TEXT.SB.16"
                tools:text="010-1234-1234" />

            <TextView
                android:id="@+id/tv_busi_number_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="@style/Foorrng.TEXT.EB.14"
                android:textColor="@color/foorrng_orange_dark"
                android:text="@string/busi_number"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tv_busi_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Foorrng.TEXT.SB.16"
                tools:text="010-1234-1234" />

        </LinearLayout>

    </ScrollView>



</LinearLayout>